<%- include("./partials/header") %>
<link rel= "stylesheet" href= "./styles/signup.css">
<form action="/" method="post">
  <div class="container">
    <h1>Charity Verification</h1>
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
    <label for="name"><b>Name</b></label>
    <input type="text" placeholder="Enter Full Name" name="fullname" id="fullname" required>
    <br />
    <label for="email"><b>Email</b></label>
    <input type="email" placeholder="johndoe@gmail.com" pattern=".+@gmail.com" name="email" id="email" required>
    <br />
    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" id="password" required><br>
    <label for="phone" ><b>Phone</b></label>
    <input type="tel" name="telcollector" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required placeholder="Enter phone number" /> <br />
    <br /><hr>
    <p>Please enter the Endorser Details.</p> 
    <label for="org"><b>Endorser</b></label>
    <input type="text" name="org" id="org" required><br />
    <label for="email"><b>Email</b></label>
    <input type="email" placeholder="johndoe@gmail.com" pattern=".+@gmail.com" name="orgEmail" id="orgEmail" required>
    <br />
    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a></p>
    <button type="submit" class="registerbtn btn" ><h3>Register</h3></button>
    <h3>Already have an account? <a href="login.html">Login</a></h3>
    <a href="forgotpassword.html">Forgot Password? </a>
    </div>

  
</form>
